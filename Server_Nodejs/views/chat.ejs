            $('#ListMessenger').append("<div class='msweb'>" + mesW.un + ":" + mesW.ms + "<div>");
        })
        socket.on('sever-send-username-thanhcong', (user_profile) => {
            alert('dang-ky-user-thanh cong');
            $('#currentUser').append("<span class='user1' >" + user_profile + "</span>");
