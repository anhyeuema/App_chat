            });
            $('#btnChat').click(() => {
                socket.emit('web-send-messenger-text', $('#txtMessenger').val());
            });

            //chat room
            $('#btnchatromm').click(() => {
                socket.emit('tao-room-web', $('#txtchatrom').val());
            });

            //web send chat room
            $('#btnChatRooms').click(() => {
                socket.emit('web-send-messenger-chat-rooms', $('#txtMessenger').val());
